@{
    ViewBag.Title = "Home";
}

    <img src="~/Content/fitnessforlife.jpg" class="img-fluid start" alt="Responsive image" />

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3" style="max-width: 20rem;">
                <h4 class="card-header bg-secondary">@Html.ActionLink("Manage Appointments", "Index", "Appointments", routeValues: null, htmlAttributes: new { @class = "card-title text-white" })</h4>
                <div class="card-body">
                    <p class="card-text">As an owner of Fitness for Life you can create/edit/delete appointments for users so that they can view the available appointments.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3" style="max-width: 20rem;">
                <h4 class="card-header bg-secondary">@Html.ActionLink("Manage Branches", "Index", "Branches", routeValues: null, htmlAttributes: new { @class = "card-title text-white" })</h4>
                <div class="card-body">
                    <p class="card-text">As an owner of Fitness for Life you can create/edit/delete Fitness centers if you open a new center of close an old one.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3" style="max-width: 20rem;">
                <h4 class="card-header bg-secondary">@Html.ActionLink("Some Tips", "Tips", "Tips", htmlAttributes: new { @class = "card-title text-white" })</h4>
                <div class="card-body">
                    <p class="card-text">Click and see some tips and tricks to follow in your daily life to burn some calories and keep yourself fit and active.</p>
                </div>
            </div>
        </div>
    </div>