@model IEnumerable<FitnessForLife.Models.Appointment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="start">Book Appointment</h2>

<div id="calendar"></div>
<div style="display: none">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Branch1.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultant1.Full_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAndTime)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="appointments">
                <td class="branch">
                    @Html.DisplayFor(modelItem => item.Branch1.Name)
                </td>
                <td class="consultant">
                    @Html.DisplayFor(modelItem => item.Consultant1.Full_Name)
                </td>
                <td class="username">
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td class="branch">
                    @Html.DisplayFor(modelItem => item.DateAndTime)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/fullcalendar")
}
